<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res/com.time.master"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <com.time.master.view.BasicEditText
        android:id="@+id/plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setbar_backgroundp"
        android:gravity="center_vertical"
        android:hint="计划标题"
        android:paddingLeft="@dimen/editview_padding_left"
        android:singleLine="true"
        android:textIsSelectable="true"
        layout:new_line="true"
        layout:width_multi="4" />

    <com.time.master.view.BasicTextView
        android:id="@+id/plan_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF007FFF"
        android:gravity="center"
        android:text="类"
        layout:new_line="false"
        layout:width_multi="1" />
    <!-- /////////////////////////////////////////////////////////////////////////////// -->

    <com.time.master.view.BasicTextView
        android:id="@+id/plan_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFACD6FF"
        android:gravity="center"
        android:text="日期\n倒计"
        layout:new_line="true"
        layout:width_multi="1" />

    <com.time.master.view.BasicEditText
        android:id="@+id/plan_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setbar_backgroundp"
        android:gravity="center_vertical"
        android:hint="开始日期时间"
        android:paddingLeft="@dimen/editview_padding_left"
        android:singleLine="true"
        android:textIsSelectable="true"
        layout:new_line="false"
        layout:width_multi="3" />

    <com.time.master.view.BasicTextView
        android:id="@+id/plan_previou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFACD6FF"
        android:gravity="center"
        android:text="承前"
        layout:new_line="false"
        layout:width_multi="1" />
    <!-- /////////////////////////////////////////////////////////////////////////////// -->

    <com.time.master.view.BasicTextView
        android:id="@+id/plan_time_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFACD6FF"
        android:gravity="center"
        android:text="占用\n期间"
        layout:new_line="true"
        layout:width_multi="1" />

    <com.time.master.view.BasicEditText
        android:id="@+id/plan_length"
