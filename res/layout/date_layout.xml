<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:id="@+id/date_selector_wheel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
      
        <com.time.master.wheel.widget.UIWheelView android:id="@+id/year"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"/>
        <com.time.master.wheel.widget.UIWheelView android:id="@+id/month"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"/>
        <com.time.master.wheel.widget.UIWheelView android:id="@+id/day"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"/>
        <com.time.master.wheel.widget.UIWheelView android:id="@+id/hour"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"/>
        <com.time.master.wheel.widget.UIWheelView android:id="@+id/minute"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"/>
    </LinearLayout>  
    <Button android:id="@+id/time_confirm"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_above="@id/date_selector_wheel"
            android:layout_alignParentRight="true"
            android:text="确定"/>
    <EditText android:id="@+id/edit_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/time_confirm"
            android:layout_alignParentLeft="true"
            android:layout_above="@id/date_selector_wheel"/>
</RelativeLayout>