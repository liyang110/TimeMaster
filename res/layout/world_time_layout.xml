        <com.time.master.view.SelectedTextView
            android:id="@+id/Singapore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新加\n坡"
            android:textColor="#000000"
            layout:default_bg="0xFF92D050"
            layout:new_line="false"
            layout:width_multi="1"
            layout:attr_group="3" />

        <com.time.master.view.SelectedTextView
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提前"
            android:textColor="#000000"
            layout:default_bg="0xFF99CCFF"
            layout:new_line="false"
            layout:width_multi="1" 
            layout:attr_group="2"/>
        </com.time.master.view.GroupSingleTouchViewGroup>

</RelativeLayout>