<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.time.master.view.BasicTextView
                android:id="@+id/informapush_tvUsername"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="#E7E7E7"
                android:clickable="true"
                android:drawableLeft="@drawable/checkbox"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/page2_one"
                android:textSize="@dimen/pagecomponent_text_size" />

            <Button
                android:id="@+id/informapush_btnSee"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#90D24D"
                android:gravity="center"
                android:text="@string/page2_seebtn"
                android:textColor="#ffffff"
                android:textSize="@dimen/pagecomponent_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.time.master.view.BasicTextView
                android:id="@+id/informapush_tvRememberpw"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="#E7E7E7"
                android:clickable="true"
                android:drawableLeft="@drawable/checkbox"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/page2_two"
                android:textSize="@dimen/pagecomponent_text_size" />

            <Button
                android:id="@+id/informapush_btnRegist"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#90D24D"
                android:text="@string/page2_registbtn"
                android:textColor="#ffffff"
                android:textSize="@dimen/pagecomponent_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.time.master.view.BasicTextView
                android:id="@+id/informapush_tvLogin"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="#E7E7E7"
                android:clickable="true"
                android:drawableLeft="@drawable/checkbox"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/page2_three"
                android:textSize="@dimen/pagecomponent_text_size" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.time.master.view.BasicTextView
                android:id="@+id/informapush_tvFogetpw"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="#E7E7E7"
                android:clickable="true"
                android:drawableLeft="@drawable/checkbox"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/page2_four"
                android:textSize="@dimen/pagecomponent_text_size" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.time.master.view.BasicTextView
                android:id="@+id/informapush_tvKeyboard"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="#E7E7E7"
                android:clickable="true"
                android:drawableLeft="@drawable/checkbox"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/page2_five"
                android:textSize="@dimen/pagecomponent_text_size" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>