<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDFDE"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#319EDE"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@string/page_title"
        android:textColor="#ffffff"
        android:textSize="@dimen/pagetitle_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAF3FA"
        android:gravity="center"
        android:text="@string/page1_sysprompt"
        android:textColor="#B92727"
        android:textSize="@dimen/pagetitle_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3.2"
        android:background="#EAF3FA"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/page1_content"
            android:textSize="@dimen/pagecontent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:background="@drawable/setbar_backgroundfirstpage"
                android:ems="10"
                android:hint="@string/page1_hintname"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/pagecomponent_text_size" />

            <Button
                android:id="@+id/page1_setbtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#01B0F1"
                android:text="@string/page1_setbtn"
                android:textColor="#ffffff"
                android:textSize="@dimen/pagecomponent_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:background="@drawable/setbar_backgroundfirstpage"
                android:ems="10"
                android:hint="@string/page1_hintpw"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/pagecomponent_text_size" />

            <Button
                android:id="@+id/page1_loginbtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#01B0F1"
                android:hint="@string/page1_hintname"
                android:text="@string/page1_loginbtn"
                android:textColor="#ffffff"
                android:textSize="@dimen/pagecomponent_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/page1_endtv"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/page1_hintname"
            android:text="@string/page1_end"
            android:textSize="@dimen/pagecomponent_text_size" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            layout="@layout/page2" />
    </LinearLayout>

</LinearLayout>