<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDFDE"
    android:orientation="vertical">
    
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center"
    android:background="#319EDE"
    android:textColor="#ffffff"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:textSize="@dimen/pagetitle_text_size"
    android:text="@string/page_title"/>

  
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#B92727"
        android:background="#EAF3FA"
        android:textSize="@dimen/pagetitle_text_size"
        android:text="@string/page1_sysprompt"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="3.2"
    android:background="#EAF3FA"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/page1_content"
        android:textSize="@dimen/pagecontent_text_size" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="3"
    android:orientation="vertical"
    android:background="#FFFFFF">   

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal" >

	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:layout_marginLeft="10dp"
	        android:ems="10"
	        android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="@dimen/pagecomponent_text_size"
	        android:hint="@string/page1_hintname" 
	        android:background="@drawable/setbar_backgroundfirstpage"/>

	    <Button
	        android:id="@+id/page1_setbtn"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:background="#01B0F1"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/pagecomponent_text_size"
	        android:text="@string/page1_setbtn" />
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="10dp"
	    android:orientation="horizontal" >

	    <EditText
	        android:id="@+id/editText2"
	        android:layout_width="0dip"
	        android:layout_weight="3"
	        android:layout_height="match_parent"
	        android:ems="10"
	        android:paddingBottom="10dp"
            android:paddingTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:hint="@string/page1_hintpw"
	        android:inputType="textPassword" 
	        android:textSize="@dimen/pagecomponent_text_size"
	        android:background="@drawable/setbar_backgroundfirstpage"/>

	    <Button
	        android:id="@+id/page1_loginbtn"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:background="#01B0F1"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/pagecomponent_text_size"
	        android:hint="@string/page1_hintname" 
	        android:text="@string/page1_loginbtn" />
	</LinearLayout>
 
</LinearLayout>
	<LinearLayout 
	     android:layout_width="fill_parent"
        android:layout_height="0dip"
    	android:layout_weight="5"
    	android:orientation="horizontal"
	   >
 	<TextView
        android:id="@+id/page1_endtv"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/pagecomponent_text_size"
        android:hint="@string/page1_hintname" 
        android:text="@string/page1_end" />
 	<include 
 	    layout="@layout/page2"
 	    android:layout_width="fill_parent"
        android:layout_height="match_parent"
 	    
 	    
 	    />
 	</LinearLayout>
</LinearLayout>