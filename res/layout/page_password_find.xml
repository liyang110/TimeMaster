<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#319EDE"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@string/page_title"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/pagetitle_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="@string/page3_title0"
            android:textColor="#000000"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left"
            android:text="@string/page3_tv1"
            android:textColor="#000000"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pwfind_tvQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setbar_backgroundp"
            android:gravity="center"
            android:hint="@string/page3_hint1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#E7E7E7"
            android:textIsSelectable="true"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pwfind_tvAnwser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setbar_backgroundp"
            android:gravity="center"
            android:hint="@string/page3_hint2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#E7E7E7"
            android:textIsSelectable="true"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingTop="18dp"
            android:text="@string/page3_tv2"
            android:textColor="#000000"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2.4"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pwfind_tvPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E7E7E7"
                android:clickable="true"
                android:drawableLeft="@drawable/checkbox"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/page3_cb1"
                android:textSize="@dimen/pagecomponent_text_size" />

            <TextView
                android:id="@+id/pwfind_tvEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#E7E7E7"
                android:clickable="true"
                android:drawableLeft="@drawable/checkbox"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/page3_cb2"
                android:textSize="@dimen/pagecomponent_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pwfind_tvView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setbar_backgroundp"
            android:padding="10dp"
            android:text="@string/page3_hint3"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/pwfind_btnAffirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ADD7E7"
            android:text="@string/page3_btn"
            android:textColor="#48839F"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

</LinearLayout>