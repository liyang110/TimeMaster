<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#319EDE"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@string/page_title"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/pagetitle_text_size" />

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#E7E7E7"
            android:text="@string/page4_title"
            android:textSize="@dimen/pagecomponent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_weight="7.2"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/page4_content"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/pagecontent_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"            
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" >

                <com.time.master.view.BasicTextView
                    android:id="@+id/page4_tvDisagree"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#E7E7E7"
                    android:gravity="center_vertical"
       				android:clickable="true"
       				android:padding="5dp"
                	android:paddingTop="8dp"
                	android:paddingBottom="8dp"
       				android:drawableLeft="@drawable/checkbox"
                    android:textSize="@dimen/pagetitle_text_size"
                    android:text="@string/page4_disagreecb" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <com.time.master.view.BasicTextView
                    android:id="@+id/page4_tvAgree"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#E7E7E7"
                    android:gravity="center_vertical"
      				android:clickable="true"
      				android:padding="5dp"
                	android:paddingTop="8dp"
                	android:paddingBottom="8dp"
       				android:drawableLeft="@drawable/checkbox"
                    android:textSize="@dimen/pagetitle_text_size"
                    android:text="@string/page4_agreecb" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>